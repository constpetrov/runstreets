<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <TextView
        android:id="@+id/rename_year"
        android:focusable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:text="c 1965 года"/>
    <TextView
        android:id="@+id/rename_name"
        android:focusable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rename_year"
        android:text="2-ой Пятигорский"/>
    
    <TextView
        android:id="@+id/rename_type"
        android:focusable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:textStyle="bold"
        android:layout_toRightOf="@id/rename_name"
        android:layout_alignTop="@id/rename_name"
        android:text="проезд"/>

</RelativeLayout>
